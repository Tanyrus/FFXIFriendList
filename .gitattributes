# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts must always use LF line endings
*.sh text eol=lf
*.bash text eol=lf

# PowerShell scripts can use CRLF
*.ps1 text eol=crlf

# JavaScript files use LF
*.js text eol=lf
*.json text eol=lf

# C++ files use LF
*.cpp text eol=lf
*.h text eol=lf
*.hpp text eol=lf

# CMake files use LF
CMakeLists.txt text eol=lf
*.cmake text eol=lf

# Config files use LF
*.config text eol=lf
*.conf text eol=lf
*.ini text eol=lf

# Markdown files use LF
*.md text eol=lf

# YAML files use LF
*.yml text eol=lf
*.yaml text eol=lf

# Binary files
*.dll binary
*.lib binary
*.exe binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.db binary
*.sqlite binary

# Default: use LF everywhere
* text=auto eol=lf
